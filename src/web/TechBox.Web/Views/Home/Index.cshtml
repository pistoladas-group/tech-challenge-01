@{
    ViewData["Title"] = "Home";
}

<div class="toolbar" role="banner">
    <img width="40" alt="Tech Box Logo" src="~/logo.png" />
    <span>Tech Box</span>
    <div class="spacer"></div>
</div>

<div class="content" role="main">
    <div class="container">
        <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Importe suas imagens para a nuvem</label>
        </div>

        <div class="input-group mb-3 btn-group">
            <input class="form-control" type="file" id="formFileMultiple" multiple>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-success">Upload</button>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Nome</th>
                    <th scope="col">Tamanho</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>MeuArquivo.pdf</td>
                    <td>12 MB</td>
                    <td><span class="fa-solid fa-cloud-arrow-down download-icon"></span><span class="fa-regular fa-trash-can delete-icon"></span></td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>MeuOutroArquivo.xlsx</td>
                    <td>10 KB</td>
                    <td><span class="fa-solid fa-cloud-arrow-down download-icon"></span><span class="fa-regular fa-trash-can delete-icon"></span></td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>MeuTexto.txt</td>
                    <td>2 KB</td>
                    <td><span class="fa-solid fa-cloud-arrow-down download-icon"></span><span class="fa-regular fa-trash-can delete-icon"></span></td>
                </tr>
            </tbody>
        </table>
    </div>

    <svg 
        id="clouds" 
        xmlns="http://www.w3.org/2000/svg" 
        width="2611.084" 
        height="485.677"
        viewBox="0 0 2611.084 485.677"
        >
        <title>Gray Clouds Background</title>
