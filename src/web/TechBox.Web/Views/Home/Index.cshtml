@{
    ViewData["Title"] = "Home";
}

<div class="toolbar" role="banner">
    <img width="40" alt="Tech Box Logo" src="~/logo.png" />
    <span>Tech Box</span>
    <div class="spacer"></div>
</div>

<div class="content" role="main">
    <div class="container">
        <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Importe suas imagens para a nuvem</label>
        </div>

        <div class="input-group mb-3 btn-group">
            <input class="form-control" type="file" id="formFileMultiple" multiple>
            <div class="btn-group" role="group">
                <button id="btnUpload" type="button" class="btn btn-outline-success">Upload</button>
            </div>
        </div>

        <table id="tblFiles" class="table">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Tamanho</th>
                    <th scope="col">Data de Upload</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @* row to be used as a template to clone *@
                <tr id="data-file-row-to-clone" data-file-id class="d-none">
                    <td data-file-name>-</td>
                    <td data-file-size>-</td>
                    <td data-file-created-at>-</td>
                    <td data-file-actions>
                        <div data-file-actions-crud class="d-none">
                            <span class="fa-solid fa-cloud-arrow-down download-icon"></span>
                            <span class="fa-regular fa-trash-can delete-icon"></span>
                        </div>
                        <div data-file-actions-processing class="">
                            <span class="fa-solid fa-cloud-arrow-up fa-fade processing-icon"></span>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

